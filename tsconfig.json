{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./src/types/*"
      ]
    },
  },
  "files": ["src/server.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}